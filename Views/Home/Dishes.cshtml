@model List<Dish>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Chef Dishes</title>
    <link rel="stylesheet" href="~/css/dishes.css"/>
</head>
<body>
    <h5 class="text-right"><a href="/dishes/new">Add a Dish</a></h5>
    <h1 class="text-center"><a class="border-right pr-5" href="/">Chefs</a><a class="ml-5" href="/dishes"><u>Dishes</u></a></h1>
    <h3>Yum, take a look at our tasty dishes!</h3>
    <br>
    <div id="table">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Chef</th>
                    <th scope="col">Tastiness</th>
                    <th scope="col">Calories</th>
                </tr>
            </thead>
            <tbody class="bodycontainer scrollable">
            @foreach(var dish in Model)
            {
                <tr>
                    <th scope="row">@dish.Name</th>
                    <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                    <td>@dish.Tastiness</td>
                    <td>@dish.Calories</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</body>
</html>